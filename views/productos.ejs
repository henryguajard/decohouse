<%- include('partials/header') %>
  <div class="container py-5">
    <h1 class="mb-4">Cat√°logo de Productos</h1>
    <div class="row">
      <% productos.forEach(producto => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="/img/<%= producto.imagen %>" class="card-img-top" alt="<%= producto.nombre %>">
            <div class="card-body">
              <h5 class="card-title"><%= producto.categoria %></h5>
              <h5 class="card-title"><%= producto.nombre %></h5>
              <p class="card-text"><%= producto.descripcion %></p>
              <p class="card-text text-success fw-bold">$<%= producto.precio %></p>
              <p class="card-text text-muted">Stock: <%= producto.stock %></p>
               <form action="/carrito/agregar" method="POST">
              <input type="hidden" name="productoId" value="<%= producto._id %>">
              <button class="btn btn-primary w-100" type="submit">Agregar al carrito</button>
            </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<%- include('partials/footer') %>
