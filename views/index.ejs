


<%- include('partials/header') %>
<section class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-4 mt-5">
      <h3>Diseñamos tus muebles 100% <br>A tu medida</h3>
      <div id="timeout"></div>
    </div>
    <div class="col-sm-8">
      <img src="./img/decoracion-sillones.jpg" width="800" class="img-fluid" alt="">
    </div>
  </div>
</section>

<div class="container mt-5">
  <h2 class="mb-4">Productos Destacados</h2>
  <div class="row">
    <% productos.forEach(producto => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="/img/<%= producto.imagen %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= producto.nombre %></h5>
            <p class="card-text"><%= producto.descripcion %></p>
            <p class="card-text text-success fw-bold">$<%= producto.precio %></p>
            <form action="/carrito/agregar" method="POST">
              <input type="hidden" name="productoId" value="<%= producto._id %>">
              <button class="btn btn-primary w-100" type="submit">Agregar al carrito</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

